{
	"manifest_version": 2,

	"name": "Facebook Ward",
	"version": "1.0",
	"description": "Use a ward para acompanhar os posts que mais lhe interessam no Facebook!",
	"icons": { "128": "Ward.png" },
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  	"permissions": [ "<all_urls>", "tabs", "http://*/*", "https://*/*", "activeTab" ],

	"background": {
    	"page" : "background.html",
    	"persistent": false
  	},

	"browser_action": {
		"default_title": "",
		"default_icon": "Ward.png"
	},	 

	"content_scripts": [ {
    	"js": [ "jquery.min.js", "inject.js", "background.js", "fbscript.js"],
    	"matches": [ "http://www.facebook.com/*", "https://www.facebook.com/*"]
    }]
}